<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>角色管理</title>
</head>
<body ng-controller="rolemanageCtrl">
<div class="row">
		<div class="col-xs-12 col-md-12">
			<div class="well with-header with-footer">
				<div class="header bordered-blue">角色管理</div>
					<div class="table-toolbar">
					<a id="editabledatatable_new" href="javascript:void(0);" ng-click="addRole();"
						class="btn btn-default"> 添加新角色 </a>
				</div>
				
				<table class="table table-striped table-bordered table-hover">
					<thead>
						<tr>
							<th>序号</th>
							<th>角色名称</th>
							<th>是否冻结</th>
							<th>创建时间</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<tr ng-repeat="role in roleList">
							<td>{{$index+1}}</td>
							<td>{{role.roleName}}</td>
							<td>{{role.isLockUp}}</td>
							<td>{{role.createTime| date}}</td>
							<td><a href="javascript:void(0);" ng-click="editRoleManage(role)"
								class="btn btn-default btn-xs purple"><i class="fa fa-edit"></i>
									编辑</a> <a href="javascript:void(0);" ng-click="deleteRole(role);" 
								class="btn btn-default btn-xs black"><i
									class="fa fa-trash-o"></i> 删除</a></td>
						</tr>

					</tbody>
				</table>
				<div class="row DTTTFooter">
					<div class="col-sm-5 col-md-5">
						<div class="dataTables_info" id="simpledatatable_info"
							role="alert" aria-live="polite" aria-relevant="all">Showing
							{{(page.indexPageNum-1)*page.size+1}} to
							{{page.indexPageNum*page.size}} of {{page.totalCount}} items</div>
					</div>
					<div class="col-sm-7 col-md-7">
						<div class="dataTables_paginate paging_bootstrap"
							id="simpledatatable_paginate">
							<ul id="page" class="pagination pull-right">
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>